---
import EventsItem from "./EventsItem.astro"
---
<ul id="dashboard-list" class="m-0 p-2 list-none overflow-auto flex flex-col gap-8 rounded-md border border-gray-300 h-full md:w-[70%] lg:w-[50%]">
 <template id="events-item-template">
    <EventsItem
    event_name="Fiesta de fin de año"
    event_date="31-12-2025"
    event_time="16:30"
    guests_byEvents="16"
    event_description="sera una fiesta de fin de año"
    />
 </template>
</ul>




<script>
    // @ts-nocheck
    import homeModule, { events } from "./home.module";
    import AuthModule from "../auth/auth.module";
    const eventsItemTemplate = document.querySelector('#events-item-template');
    const eventList = document.querySelector('#dashboard-list');
    await homeModule.getEventsListForHome();
        events.subscribe(events => {
            eventList.innerHTML= '';
            for (const event of events) {
                const eventItem = eventsItemTemplate.content.cloneNode(true);
                const nameInput = eventItem.querySelector('input:nth-child(1)');
                const dateInput = eventItem.querySelector('input:nth-child(2)');
                const timeInput = eventItem.querySelector('input:nth-child(3)');
                const guestsInput = eventItem.querySelector('input:nth-child(4)');
                const descriptionInput = eventItem.querySelector('input:nth-child(5)');
                const liElement = eventItem.querySelector('li');
                console.log(nameInput, dateInput, timeInput, guestsInput, descriptionInput);
                
                liElement.id = event.event_id;
            }
        })
    
    

    const user =  await AuthModule.getLoggedUser();
    const userId = user.id;
    
   
    const dataguests = await homeModule.getGuestsByEventId(userId);
    
   
  
  



</script>